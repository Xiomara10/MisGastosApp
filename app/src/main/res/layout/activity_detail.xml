<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".activities.DetailActivity">

    <TextView
        android:id="@+id/textview_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textview_detail_total"
        android:padding="4dp"
        android:textSize="18sp"
        tools:text="Saldo Actual Ahorro"/>

    <TextView
        android:id="@+id/textview_detail_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:textSize="18sp"
        tools:text="1200"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reciclerview_operations_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/textview_detail_title">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>